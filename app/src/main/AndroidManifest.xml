<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.manu.whatsoncrypto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_wc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_wc_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".CoinMarket"
            android:label="@string/title_activity_coin_market">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".coinmarket.CoinMarketDetails"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_coin_market_details"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>