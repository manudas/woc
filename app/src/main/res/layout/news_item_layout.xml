<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/borders"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingEnd="2dp"
    android:paddingStart="2dp"
    android:paddingTop="2dp">

    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:orientation="horizontal">

        <LinearLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headlineNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:lineSpacingExtra="3sp"
                android:text="headline"
                android:textColor="@color/textColorWhatsOnCrypto"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/advanceNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:lineSpacingExtra="1sp"
                android:paddingBottom="2dp"
                android:text="advance"
                android:textColor="@android:color/white"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/borders" />

    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="22dp"

        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/urlNews"
                android:layout_width="wrap_content"
                android:layout_height="22sp"
                android:lineSpacingExtra="8sp"
                android:text="URL"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@drawable/borders" />

            <ImageView
                android:id="@+id/like_icon"
                android:layout_width="@dimen/big_font"
                android:layout_height="@dimen/big_font"
                android:layout_gravity="left"
                android:visibility="invisible"
                app:srcCompat="@drawable/like_icon" />

            <TextView
                android:id="@+id/positive_votes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0k"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/dislike_icon"
                android:layout_width="@dimen/big_font"
                android:layout_height="@dimen/big_font"
                android:visibility="invisible"
                app:srcCompat="@drawable/dislike_icon" />

            <TextView
                android:id="@+id/negative_votes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0k"
                android:visibility="invisible" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/read_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/read_icon" />

                <TextView
                    android:id="@+id/read_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="0k"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
