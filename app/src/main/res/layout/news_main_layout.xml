<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borders"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/imageNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="10dp"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/headlineNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="headline" />

    <TextView
        android:id="@+id/advanceNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="advance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/borders" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/like_icon"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_gravity="left"
            app:srcCompat="@drawable/like_icon" />

        <TextView
            android:id="@+id/positive_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0k" />

        <ImageView
            android:id="@+id/dislike_icon"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            app:srcCompat="@drawable/dislike_icon" />

        <TextView
            android:id="@+id/negative_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0k" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/read_icon"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                app:srcCompat="@drawable/read_icon" />

            <TextView
                android:id="@+id/read_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0k" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
